<Window x:Class="Demo.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        xmlns:virtualhierarchygrid="clr-namespace:VirtualHierarchyGrid;assembly=VirtualHierarchyGrid"
        mc:Ignorable="d"
        Title="CanvasWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <virtualhierarchygrid:HierarchyGrid x:Name="HierarchyGrid" />
        <Button x:Name="FillButton"
                Click="FillButton_Click"
                Content="Fill"
                Grid.Row="1" />
    </Grid>
</Window>