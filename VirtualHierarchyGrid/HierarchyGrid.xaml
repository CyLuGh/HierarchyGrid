<rxui:ReactiveUserControl x:Class="VirtualHierarchyGrid.HierarchyGrid"
                          x:TypeArguments="local:HierarchyGridViewModel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:local="clr-namespace:VirtualHierarchyGrid"
                          mc:Ignorable="d"
                          d:DesignHeight="450"
                          d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Canvas x:Name="HierarchyGridCanvas"
                Background="Transparent"
                ClipToBounds="True"
                Grid.Row="0"
                Grid.Column="0">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="ScaleTransform" />
            </Canvas.LayoutTransform>
        </Canvas>

        <ScrollBar x:Name="VerticalScrollBar"
                   Minimum="0"
                   SmallChange="1"
                   LargeChange="5"
                   Grid.Column="1" />
        <ScrollBar x:Name="HorizontalScrollBar"
                   Minimum="0"
                   SmallChange="1"
                   LargeChange="5"
                   Orientation="Horizontal"
                   Grid.Row="1" />

        <Rectangle x:Name="Corner"
                   Grid.Row="1"
                   Grid.Column="1" />

        <Border x:Name="MessageBorder"
                Background="{DynamicResource CellBackground}"
                BorderThickness="1"
                BorderBrush="{DynamicResource CellBorder}"
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2">
            <TextBlock x:Name="MessageTextBlock"
                       Text="Message"
                       Foreground="{DynamicResource CellForeground}"
                       FontSize="15"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</rxui:ReactiveUserControl>
